<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/football"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <!--Team B Score-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Team A"
                android:textColor="#EAE7E7"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tvScoreA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="0"
                android:textColor="#EAE7E7"
                android:textSize="40dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="#FFC105"
                android:onClick="btnScoreA"
                android:text="Score"
                android:textColor="#870303"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="#FFC105"
                android:onClick="btnAddScoreA"
                android:text="+1 Goal"
                android:textColor="#870303"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Team B"
                android:textColor="#EAE7E7"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="0"
                android:id="@+id/tvScoreB"
                android:textColor="#EAE7E7"
                android:textSize="40dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="#FFC105"
                android:onClick="btnScoreB"
                android:text="Score"
                android:textColor="#870303"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="#FFC105"
                android:onClick="btnAddScoreB"
                android:text="+1 Goal"
                android:textColor="#870303"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>




    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remining Time"
        android:textColor="#fff"
        android:layout_centerInParent="true"
        android:textSize="40sp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="250dp"
        android:textSize="50sp"
        />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="#FFC105"
        android:foregroundGravity="center"
        android:layout_marginBottom="160dp"
        android:gravity="center"
        android:text="Start"
        android:textColor="#870303"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="#FFC105"
        android:foregroundGravity="center"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:text="STOP"
        android:textColor="#870303"
        android:textSize="20sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="#FFC105"
        android:foregroundGravity="center"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Reset"
        android:textColor="#870303"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>

